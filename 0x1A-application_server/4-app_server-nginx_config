server {
        location /hbnb_static {alias /data/web_static/current/;index index.html;}

        add_header X-Served-By 294350-web-01;
        listen 80 default_server;
        listen [::]:80 default_server;

        root /var/www/html;

        index index.html index.htm index.nginx-debian.html;

        server_name _;

        location / {
                try_files $uri $uri/ @404;
        }

        location /airbnb-onepage {
                proxy_pass http://localhost:5000/airbnb-onepage;
                proxy_redirect off;
        }

        location /airbnb-dynamic/number_odd_or_even/ {
                proxy_pass http://localhost:5001/number_odd_or_even/;
                proxy_redirect off;
        }

        location /api/ {
                proxy_pass http://localhost:5002/api/;
                proxy_redirect off;
        }

        location /redirect_me {return 301 https://github.com/imendy;}

        location @404 {return 404 "Ceci n'est pas une page\n";}
}
